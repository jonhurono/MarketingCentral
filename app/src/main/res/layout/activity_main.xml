<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.6"
        android:layout_width="0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtUser"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:nextFocusDown="@+id/txtPassword"
                    android:autofillHints="username"
                    android:hint="@string/usuario"/>

            </com.google.android.material.textfield.TextInputLayout>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_weight="1">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    android:id="@+id/txtPassword"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:autofillHints="password"
                    android:hint="@string/contrasena"/>

            </com.google.android.material.textfield.TextInputLayout>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:fontFamily="arial"
                android:textStyle="normal"
                android:background="@drawable/rect_rounded_button"
                android:backgroundTint="@color/burdeoCentral"
                android:theme="@style/ColorButton"
                android:id="@+id/btnLogin"
                android:text="@string/ingresar" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:id="@+id/btnTest"
                android:visibility="gone"
                android:text="@string/test"/>
        </TableRow>
    </TableLayout>

    <TextView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/aqui_version"
        android:id="@+id/lblversion"/>

</androidx.constraintlayout.widget.ConstraintLayout>